{
  "compilerOptions": {
    // Ensure that .d.ts files are created by tsc, but not .js files
    "declaration": true,
    "emitDeclarationOnly": true,
    // Ensure that Babel can safely transpile files in the TypeScript project
    "isolatedModules": true,
    "rootDir": "./",
    "outDir": "./build/types",
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false,
    "target": "es2018",
    "types": [],
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "./build/**/*",
    "./node_modules/**/*"
  ]
}
