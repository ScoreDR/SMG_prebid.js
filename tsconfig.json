{
  "compilerOptions": {
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "target": "es2018",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": false,
    "rootDir": "./",
    "noEmitHelpers": true
  },
  "include": [
    "./src/**/*.ts",
    "./modules/**/*.ts",
    "./creatives/**/*.ts",
    "./test/**/*.ts"
  ]
  
}